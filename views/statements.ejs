var steps = [1, 2, 3, 4, 5];
$(".amount").text("Neither Agree Nor Disagree");

$(".slider").slider({
  range: "min",
  value: 2,
  min: 0,
  max: steps.length - 1,
  step: 1,
  slide: function(event, ui) {
    if (steps[ui.value] === 1) {
      $(this).prev().text("Disagree Completely");
    } else if (steps[ui.value] === 2) {
      $(this).prev().text("Disagree Somewhat");
    } else if (steps[ui.value] === 3) {
      $(this).prev().text("Neither Agree Nor Disagree");
    } else if (steps[ui.value] === 4) {
      $(this).prev().text("Agree Somewhat");
    } else if (steps[ui.value] === 5) {
      $(this).prev().text("Agree Completely");
    }
  }
});


